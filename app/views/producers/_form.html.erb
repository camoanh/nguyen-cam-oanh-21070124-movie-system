<%= form_with(model: producer) do |form| %>
<% if producer.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(producer.errors.count, "error") %> prohibited this producer from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% producer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :Director, class: label_class %>
          <%= form.text_field :Director, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Actor, class: label_class %>
          <%= form.text_field :Actor, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Writer, class: label_class %>
          <%= form.text_field :Writer, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if producer.persisted? %>
<%= link_to "Cancel", producer, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", producers_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
